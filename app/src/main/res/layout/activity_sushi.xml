<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0000FF"
    tools:context="com.umkc.jeff.morgan.mysushi.SushiActivityMenu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/california_roll_button"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="California Roll"
            />

        <Button
            android:id="@+id/dragon_roll_button"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Dragon Roll" />

        <Button
            android:id="@+id/rainbow_roll_button"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Rainbow Roll" />

        <Button
            android:id="@+id/spicy_tuna_button"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Spicy Tuna Roll" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Button" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Button" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Button" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Button" />

    </LinearLayout>
</ScrollView>
