<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F46315"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.umkc.jeff.morgan.mysushi.MainActivityMenu">

    <Button
        android:id="@+id/sushi_button"
        android:layout_width="374dp"
        android:layout_height="92dp"
        android:background="#ffff"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="Sushi"
        app:layout_constraintBottom_toTopOf="@+id/nigiri_button"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="6dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/nigiri_button"
        android:layout_width="372dp"
        android:layout_height="97dp"
        android:layout_marginBottom="48dp"
        android:background="#ffff"
        android:text="Nigiri"
        app:layout_constraintBottom_toTopOf="@+id/shashimi_button"
        tools:layout_editor_absoluteX="6dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/shashimi_button"
        android:layout_width="373dp"
        android:layout_height="95dp"
        android:layout_marginBottom="88dp"
        android:text="Shashimi"
        android:background="#ffff"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="6dp"
        tools:ignore="MissingConstraints" />
</android.support.constraint.ConstraintLayout>
